.item {
    width: 160rpx;
    display: inline-flex;
    flex-direction: column;
}

.item .photo {
    width: 100%;
    height: 223rpx;
    margin-bottom: 15rpx;
}

.item .title {
    width: 100%;
    font-weight: bold;
    font-size: 30rpx;
    margin-bottom: 4rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.item .score {
    display: flex;
    align-items: center;
    color: #818181;
    font-size: 28rpx;
}

.item .score .stars {
    display: flex;
    margin-right: 4rpx;
}

.item .score .star {
    width: 32rpx;
    height: 32rpx;
}