/* pages/login/login.wxss */
.container{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 0 30rpx;
}

.btn-login{
    height: 80rpx;
    line-height: 80rpx;
    width: 100%;
    text-align: center;
    border-radius: 10rpx;
}

.logo{
    width: 144rpx;
    height: 144rpx;
    margin: 30rpx 0;
}

.wechat{
    background-color: #42bd55;
    color: #fff;
    margin-bottom: 30rpx;
}

.douban{
    background-color: #fff;
    color: #42bd55;
    border: 2rpx solid #42bd55;
}

.agreement{
    color: #9d9d9d;
    font-size: 24rpx;
    display: flex;
    position: absolute;
    bottom: 50rpx;
}

.agreement .open{
    color: #4bb65c;
    margin-left: 10rpx;
}