page{
    height: 100%;
}

.container{
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
}

.version{
    color: #c9c9c9;
    font-size: 24rpx;
    width: 100%;
    text-align: center;
    margin-top: 40rpx;
    margin: 40rpx 0;
}

.login-wrapper{
    height: 400rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.login-wrapper image{
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
}

.login-wrapper .login{
    color: #1e4826;
    background-color: #fff;
    border-radius: 50rpx;
    height: 100rpx;
    width: 350rpx;
    line-height: 100rpx;
    text-align: center;
    box-shadow: 2rpx 2rpx 10rpx 0 rgba(0, 0, 0, 0.2);
}

.items-wrapper{
    margin-top: 30rpx;
    margin-bottom: 20rpx;
}

.items-wrapper .title-wrapper{
    display: flex;
    padding-left: 30rpx;
    padding-right: 40rpx;
    align-items: center;
    justify-content: space-between;
}

.items-wrapper .title-wrapper .title{
    font-weight: bold;
    font-size: 36rpx;
}

.items-wrapper .title-wrapper .view{
    color: #838383;
    display: flex;
    align-items: center;
}

.items-wrapper .arrow{
    width: 20rpx;
    height: 20rpx;
    border: 4rpx solid #7f7f7f;
    border-top: none;
    border-left: none;
    transform: rotate(-45deg);
    margin-left: 15rpx  ;
}

.item{
    display: flex;
    align-items: center;
    padding-left: 3rpx;
    margin-top: 20rpx;
}

/* .item:last-of-type .divider{
    display: none;
} */

.item .icon{
    width: 88rpx;
    height: 88rpx;
    margin-left: 20rpx;
}

.info-wrapper{
    flex-grow: 1;
    padding-right: 30rpx;
    padding-left: 30rpx;
}

.info-wrapper .info{
    justify-content: space-between;
    display: flex;
    align-items: center ;
}

.info-wrapper .info-wrapper .top{
    margin-top: 20 rpx;
}

.info .left .bottom{
    display: flex;
    color: #818181;
    align-items: flex-end;
}

.info .left .count{
    font-size: 50rpx;
    margin-right: 10rpx;
} 

.info .bottom .text{
    margin-bottom: 15rpx;
    font-size: 26rpx;
}

.info .right{
    display: flex;
    align-items: center;
    font-size: 26rpx;
    justify-content: space-between;
    flex-grow: 1;
    padding-left: 50rpx;
}

.info .right .text{
    color: #999999;
    margin-right: 10rpx;
}

.info .right .begin-wrapper{
    display: flex;
    align-items: center;
}

.info .right .begin{
    background-color: #f5f5f5;
    color: #4a4a4a;
    border-radius: 15rpx;
    padding: 8rpx 12rpx;
    margin-left: 18rpx;
    font-size: 22rpx;
}

.item .divider{
    width: 100%;
    height: 2rpx;
    background-color:rgba(0, 0, 0, 0.1);
    margin-top: 15rpx;
}